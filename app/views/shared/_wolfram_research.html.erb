<%
require 'nokogiri'
require 'open-uri'
url = "http://api.wolframalpha.com/v2/query?input=napoleon&appid=73P9T2-XPL2G7VY8K"
output = open(url).read
document  = Nokogiri::XML(output)
subpods = []
all_imgs = []
document.root.xpath('pod').each do |pod|
    result = pod.xpath('subpod')
    result.each do |subpod|
        subpods << subpod
    end
end
subpods.each do |subpod|
    img = subpod.xpath('img')
    all_imgs << img
end



 %>


