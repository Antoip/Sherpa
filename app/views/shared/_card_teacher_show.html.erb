              <div class="card-teacher-body">
                <p><%= feeling_notification.content %></p>
              </div>
              <div class="card-teacher-footer">
                <p id="card_teacher_class"><%= feeling_notification.course.division.name %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="message-notifications">
    <% @unread_message_notifications.first(2).each_with_index do |message_notification, index| %>
