          <div class="card-teacher-show animated fadeIn">
            <div class="card-teacher-symbol">
              <i class="fas fa-comment-alt"></i>
            </div>
            <div class="card-teacher-text card-teacher-back-color">
              <div class="card-teacher-body">
                <p><%= feedback_notification.content %></p>
              </div>
              <div class="card-teacher-footer">
                <p id="card_teacher_class"><%= feedback_notification.course.division.name %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
<div class="no-notification-message">
  <h1>Congratulations, you don't have any notifications left!</h1>
</div>
