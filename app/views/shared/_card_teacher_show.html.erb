<div class="notification-container">
  <div class="flashcard-notifications">
    <% @unread_flashcards_notifications.first(2).each_with_index do |flashcard_notification, index| %>
      <%= link_to teachers_course_path(click_student_list: true, id: flashcard_notification.course.id, notif_type: "flashcards") do %>
        <div class="notification-card <%= index.zero? ? "mb-5" : "mt-5" %>">
          <div class="card-teacher-show animated fadeIn">
            <div class="card-teacher-symbol">
              <i class="far fa-window-restore"></i>
            </div>
            <div class="card-teacher-text card-teacher-back-color">
              <div class="card-teacher-body">
                <p><%= flashcard_notification.content %></p>
              </div>
              <div class="card-teacher-footer">
                <p id="card_teacher_class"><%= flashcard_notification.course.division.name %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="feeling-notifications">
    <% @unread_feeling_notifications.first(2).each_with_index do |feeling_notification, index| %>
