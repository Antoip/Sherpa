              <div class="card-teacher-footer">
                <p id="card_teacher_class"><%= message_notification.course.division.name %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="feedback-notifications">
    <% @unread_feedback_notifications.first(2).each_with_index do |feedback_notification, index| %>
