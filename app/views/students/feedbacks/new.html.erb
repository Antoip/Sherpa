<h1 class="m-2">
  <span class="highlight-orange">Leave a feedback!</span>
</h1>

<div class="mobile-center-container">
  <div class="feedback-course-details d-flex w-90 justify-content-between">
    <h5 class="text-center mt-3"><strong><%= @course.material.name %></strong></h5>
    <p class="text-center" style="font-style: italic;"><%= @course.user.full_name %></p>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <%= render "form", course: @course ,feedback: @feedback %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/navbar_mobile_bottom', course: @course %>
