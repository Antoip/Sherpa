function refreshForm() {
  const newMessagewForm = document.getElementById('message_content');
  newMessagewForm.value = ""
}

function loadMessage() {
  const message_history = document.querySelector('.message-history');
  message_history.insertAdjacentHTML('beforeend', '<%= j render "message", message: @message, user_is_message_author: true %>' );
  refreshForm();
  let messages = document.querySelectorAll('.message');
  let lastMessage = messages[messages.length - 1];
  lastMessage.scrollIntoView();
}

loadMessage();

