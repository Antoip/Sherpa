<div class="container mt-5">
  <h1>I'm the forum partial show</h1>
  <% @forum = Forum.where("course_id = '#{params[:id]}'").first %>
  <%= @forum.topic %>
  <div class="message-history">
    <% @forum.messages.each do |message| %>
      <li><%= User.find(message.user_id).email %> - <%= message.content %></li>
    <% end %>
  </div>
  <% @message = Message.new %>
  <%= simple_form_for [@forum, @message], html: { class: "form-inline mt-3 mb-5 d-flex w-100 justify-content-between" } do |f| %>
  <%= f.input :content, input_html: { class: "form-control w-100"}, label: false %>
  <%= f.input :user_id, as: :hidden, input_html: { value: "#{current_user.id}"} %>
  <%= f.button :submit, 'Send Message', class: "btn btn-sherpa mr-3" %>
  <% end %>
</div>
